<MudDialog @bind-Visible="isOpened" Options="options">
    <TitleContent>
        <MudStack Row AlignItems="AlignItems.Center" Spacing="2">
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudIcon Icon="@Icons.Material.Filled.Repeat"
                         Color="Color.Primary"/>
            </MudHidden>
            <MudText Typo="Typo.h6">
                Перемещение карточки
            </MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudText Class="mb-3">
            Выберите коллекцию
        </MudText>
        <MudList T="CardCollectionResponseModel" Dense
                 SelectionMode="SelectionMode.SingleSelection"
                 @bind-SelectedValue="selectedCardCollection">
            @foreach (var cardCollection in cardCollections)
            {
                <MudListItem Value="cardCollection"
                             Disabled="@(cardCollection.Id == currentCardCollectionId)">
                    @cardCollection.Title [@cardCollection.CardsCount]
                </MudListItem>
            }
        </MudList>
    </DialogContent>
    <DialogActions>
        <MudStack Row AlignItems="AlignItems.Center">
            <MudButton OnClick="CloseAsync"
                       Variant="Variant.Outlined"
                       Color="Color.Primary"
                       Disabled="isDataLoading"
                       Class="mb-2">
                Отмена
            </MudButton>
            <MudButton OnClick="MoveAsync"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       Disabled="IsMoveButtonDisabled"
                       Class="mr-4 mb-2">
                Переместить
            </MudButton>
        </MudStack>
    </DialogActions>
</MudDialog>