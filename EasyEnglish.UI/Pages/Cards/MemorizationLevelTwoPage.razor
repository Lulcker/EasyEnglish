@page "/memorization-level-two/{CardCollectionId:guid}"

<PageTitle>EasyEnglish | @cardCollection?.Title | Уровень 2</PageTitle>

@if (cardCollection is not null && currentCard is not null)
{
    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-1">
        @cardCollection.Title
    </MudText>
    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-5">
        @(currentCardIndex + 1) / @cards.Count
    </MudText>

    <CardLevelTwoPaper Card="currentCard"
                       @bind-IsFlipped="isFlipped"/>

    <MudStack Row AlignItems="AlignItems.Center" Class="mt-3">
        <MudIconButton OnClick="PreviousCard"
                       Disabled="@(currentCardIndex == 0)"
                       Icon="@Icons.Material.Filled.ArrowBackIos"/>
        <MudSpacer/>
        <MudIconButton OnClick="NextCard"
                       Disabled="@(currentCardIndex >= cards.Count - 1)"
                       Icon="@Icons.Material.Filled.ArrowForwardIos"/>
    </MudStack>
}